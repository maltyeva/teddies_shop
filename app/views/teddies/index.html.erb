<div class="container">
  <h1>Teddies</h1>
  <div class="row">
    <div class="owl-carousel owl-theme">
      <% @teddies.each do |teddy| %>
        <div class="card">
          <%= image_tag teddy.photo_url , class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= teddy.name %></h5>
            <p class="card-text"><%= teddy.category.name %></p>
            <p>Amount: <%= humanized_money_with_symbol(teddy.price) %></p>
            <%= link_to "More details", teddy_path(teddy), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= content_for(:after_js) do %>
  <script type="text/javascript">
    $(function() {
       $('.owl-carousel').owlCarousel({
    loop:true,
    margin:10,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:3
        },
        1000:{
            items:5
        }
    }
    })
    });
  </script>
<% end %>